{
  "index.mapping.coerce": "false",
  "analysis": {
    "filter": {
      "english_stop": {
        "type":       "stop",
        "stopwords":  "_english_"
      },
      "english_stemmer": {
        "type":       "stemmer",
        "language":   "english"
      },
      "english_possessive_stemmer": {
        "type":       "stemmer",
        "language":   "possessive_english"
      },
      "norwegian_stop": {
        "type":       "stop",
        "stopwords":  "_norwegian_"
      },
      "norwegian_stemmer": {
        "type":       "stemmer",
        "language":   "norwegian"
      }
    },
    "analyzer": {
      "norwegian_with_html_strip": {
        "type": "custom",
        "tokenizer":  "standard",
        "char_filter": "html_strip",
        "filter": [
          "lowercase",
          "norwegian_stop",
          "norwegian_stemmer"
        ]
      },
      "english_with_html_strip": {
        "type": "custom",
        "tokenizer":  "standard",
        "char_filter": "html_strip",
        "filter": [
          "english_possessive_stemmer",
          "lowercase",
          "english_stop",
          "english_stemmer"
        ]
      },
      "standard_with_html_strip": {
        "type": "custom",
        "tokenizer":  "standard",
        "char_filter": "html_strip",
        "filter": ["lowercase"]
      }
    }
  }
}